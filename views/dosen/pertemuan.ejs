<%- include('../partials/sidebar'); -%>
<link rel="stylesheet" href="/public/css/table.css" />
<div id="container">
  <div class="">
    <h1 class="navbar-brand mb-5">Detail Pertemuan</h1>
    <div class="d-flex justify-content-between">
      <% items.forEach((item) => { %>
      <a class="button100-form-btn btn-head back ms-0" role="button" href="/dosen/coursesPlan/<%= item.id %>/<%= item.rev %>/"><% }) %><i class="bx bx-subdirectory-left"></i></a>
      <button class="button100-form-btn btn-head">
        <% items.forEach((item) => { %>
        <a href="/dosen/<%= item.id %>/<%= item.rev %>/add-pertemuan" class=""><% }) %> TAMBAH </a>
      </button>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="table-wrap">
          <table id="table_id" class="table table-responsive-xl">
            <thead class="thead">
              <tr>
                <th width="2%">MINGGU</th>
                <th width="35%">MATERI PEMBELAJARAN</th>
                <th width="30%">METODE PEMBELAJARAN</th>
                <th width="23%">PENGALAMAN BELAJAR MAHASISWA</th>
                <th width="10%">AKSI</th>
              </tr>
            </thead>

            <tbody>
              <tr class="alert">
                <% items.forEach((res) => { res.course_plan_details.forEach((item) => { %>
                <td><%= item.week %></td>
                <td><%= item.material %></td>
                <td><%= item.method %></td>
                <td><%= item.student_experience %></td>
                <td width="250px">
                  <a class="editb" href="/dosen/<%= item.course_plan_id %>/<%= res.rev %>/edit-pertemuan/<%= item.id %>"><i class="bx bxs-edit" style="color: #624de3"></i></a>
                  <form action="/dosen/<%= item.course_plan_id %>/<%= res.rev %>/pertemuan/<%= item.id %>?_method=DELETE" onsubmit="hapus()" class="d-inline" method="post">
                    <button type="submit" class="editb"><i class="bx bx-trash" style="color: #a30d11"></i></button>
                  </form>
                </td>
              </tr>
              <% })}) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function success() {
    Swal.fire("Good job!", "Pertemuan telah dihapus", "success")
      .then(function () {
        window.setTimeout(function () {
          window.location = "./pertemuan";
        }, 700);
      })
      .catch((error) => console.log(error));
  }

  function hapus() {
    Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire("Good job!", "Data deleted", "success")
          .then(function () {
            window.setTimeout(function () {
              window.location = "./pertemuan";
            }, 700);
          })
          .catch((error) => console.log(error));
      }
    });
  }
</script>
<%- include('../partials/footer'); -%>
